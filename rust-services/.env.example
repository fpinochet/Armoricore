# Armoricore Rust Services - Environment Configuration
# Copy this file to .env and fill in your actual credentials
# .env files are gitignored and will not be committed to version control

# Message Bus (NATS JetStream)
MESSAGE_BUS_URL=nats://localhost:4222

# Object Storage (Akamai S3-compatible) - REQUIRED for media processing
# Get these from your Akamai/Linode Object Storage console
OBJECT_STORAGE_ENDPOINT=https://your-bucket.akamai.com
OBJECT_STORAGE_ACCESS_KEY=your-akamai-access-key-id
OBJECT_STORAGE_SECRET_KEY=your-akamai-secret-access-key
OBJECT_STORAGE_BUCKET=your-bucket-name
OBJECT_STORAGE_REGION=akamai

# Database (Optional - only for notification worker device tokens)
# DATABASE_URL=postgresql://user:password@localhost:5432/armoricore_realtime

# AI Services (Optional)
# OPENAI_API_KEY=sk-...
# OPENAI_ORGANIZATION=org-...
# ANTHROPIC_API_KEY=sk-ant-...

# Notification Services (Optional)
# FCM_SERVER_KEY=your-fcm-server-key
# APNS_KEY_ID=your-apns-key-id
# APNS_TEAM_ID=your-team-id
# APNS_BUNDLE_ID=your-bundle-id
# APNS_KEY_PATH=/path/to/AuthKey.p8
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email
# SMTP_PASSWORD=your-password

# Logging
LOG_LEVEL=info

# Health Check Port
HEALTH_CHECK_PORT=8080
